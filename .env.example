# === TELEGRAM BOT CONFIGURATION ===
TOKEN=your_telegram_bot_token_here
CHANNEL_ID=your_channel_id_here
CHANNEL_LINK=https://t.me/your_channel_link

# === DATABASE CONFIGURATION ===
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=your_database_name
COLLECTION_NAME=numbers
COUNTRIES_COLLECTION=countries
USERS_COLLECTION=verified_users

# === ADMIN CONFIGURATION ===
ADMIN_IDS=123456789,987654321

# === SMS API CONFIGURATION ===
SMS_API_BASE_URL=http://your_sms_api_url
SMS_API_ENDPOINT=/your_api_endpoint
SMS_API_COOKIE=your_session_cookie_here

# === OTP MONITORING CONFIGURATION ===
OTP_CHECK_INTERVAL=5
OTP_TIMEOUT=300
MORNING_CALL_TIMEOUT=120

# === TIMEZONE CONFIGURATION ===
TIMEZONE_NAME=Asia/Riyadh

# === ALTERNATIVE SMS API CONFIGURATIONS ===
ALT_SMS_API_BASE_URL_1=http://your_alt_api_url_1
ALT_SMS_API_COOKIE_1=your_alt_session_cookie_1
ALT_SMS_API_BASE_URL_2=http://your_alt_api_url_2
ALT_SMS_API_COOKIE_2=your_alt_session_cookie_2

# === API HEADERS CONFIGURATION ===
SMS_API_USER_AGENT=Mozilla/5.0 (Linux; Android 10; K) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/138.0.0.0 Mobile Safari/537.36
SMS_API_ACCEPT=application/json, text/javascript, */*; q=0.01
SMS_API_X_REQUESTED_WITH=XMLHttpRequest
SMS_API_ACCEPT_ENCODING=gzip, deflate
SMS_API_ACCEPT_LANGUAGE=en-US,en;q=0.9,ks-IN;q=0.8,ks;q=0.7

# === FILE PATHS ===
USER_CACHE_DIR=user_cache

# === LOGGING CONFIGURATION ===
LOGGING_LEVEL=INFO

# === WEB SERVER CONFIGURATION ===
PORT=8080
FLASK_ENV=production